{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <article class="max-w-2xl mx-auto text-center">
        <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
            <p class="inline-block px-3 py-px mb-4 text-xs font-semibold tracking-wider text-custom-900 uppercase rounded-full bg-custom-accent-400">{{ article.category.name }}</p>
            <h1 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl mx-auto">{{ article.title }}</h1>
            <p class="text-base text-gray-700 md:text-lg">{{ article.chapo }}</p>
        </div>
        <img class="object-cover w-full h-56 rounded shadow-lg sm:h-64 md:h-80 lg:h-96"
             src="https://images.unsplash.com/photo-1569309338532-a0c01062acc8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2850&q=80"
             alt="photo">
        <div class="text-left pt-10 lg:pt-12 article-content">{{ article.content | raw }}</div>

        <div class="max-w-xl mt-10 md:mx-auto sm:text-center lg:max-w-2xl md:mt-12">
            <a class="btn btn-primary" href="{{ path('article_index') }}">back to list</a>
            <a class="btn btn-secondary" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
        </div>
    </article>
{% endblock %}
