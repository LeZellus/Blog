{{ form_start(form) }}

{# Si la route est "articles_edit on affiche les images #}
{% if app.request.attributes.get('_route') == 'article_edit' %}
    <section class="grid grid-2">
        <span class="block text-sm font-medium text-gray-700 mb-2">Images</span>
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
            {% for attachment in article.attachments %}
                <div class="relative rounded-lg max-h-40 overflow-hidden">
                    <img class="w-full h-full object-cover object-center" src="{{ asset('/uploads/'~attachment.name) }}" alt="">

                    {# On ajoute un lien permettant de supprimer une image (sera géré en Ajax) #}
                    <a class="bg-red-100 absolute right-2 top-2 flex items-center rounded-lg p-2 transition duration-300 hover:bg-red-200 group" href="{{ path('article_delete_attachment', {id: attachment.id}) }}" data-delete
                       data-token="{{ csrf_token('delete' ~ attachment.id ) }}"><i class="text-3xl text-red-600 ph-trash transition duration-300 group-hover:text-red-700"></i></a>
                </div>
            {% endfor %}
        </div>
    </section>
{% endif %}

<div class="grid gap-2">
    {{ form_label(form.attachment, "Image à la une") }}
    {{ form_widget(form.attachment) }}
    <small>{{ form_help(form.attachment) }}</small>
</div>

<div class="grid gap-2">
    {{ form_label(form.title, "Titre") }}
    {{ form_widget(form.title) }}
    <small>{{ form_help(form.title) }}</small>
</div>

<div class="grid gap-2">
    {{ form_label(form.chapo, "Description") }}
    {{ form_widget(form.chapo) }}
    <small>{{ form_help(form.chapo) }}</small>
</div>

<div class="grid gap-2">
    {{ form_label(form.content, "Contenu") }}
    {{ form_widget(form.content) }}
</div>

<div class="grid gap-2">
    {{ form_label(form.category, "Catégorie") }}
    {{ form_widget(form.category) }}
</div>

<div class="flex">
    <button class="btn btn-primary">{{ button_label|default('Créer') }}</button>
    <a class="btn btn-secondary" href="{{ path('admin_articles') }}">Retour</a>
</div>
{{ form_end(form) }}
