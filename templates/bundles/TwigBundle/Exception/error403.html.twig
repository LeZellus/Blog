{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Erreur 403 | {{ parent() }}{% endblock %}

{% block head %}
    {{ parent() }}
    <meta name="robots" content="noindex,nofollow">
{% endblock %}

{% block body %}
    <section class="pt-32">
        <img src="{{ asset('images/website/logo.svg') }}" alt="Logo website" class="h-28 w-28 sm:mx-auto mb-16">
        <div class="max-w-xl mb-10 sm:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
            <div>
                <p class="inline-block px-3 py-px mb-4 text-xs font-semibold tracking-wider text-custom-900 uppercase rounded-full bg-custom-accent-200">
                    erreur
                </p>
            </div>
            <h1 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl sm:mx-auto">
                Erreur 403</h1>
            <p class="text-base text-gray-700 md:text-lg">
                Vous ne disposez pas des autorisations nécessaires.
            </p>
        </div>
        <div class="pb-16">
            <h2 class="font-medium text-gray-500 uppercase text-base pb-6">Pages populaires</h2>
            <a href="{{ path('article_index') }}"
               class="group pl-3 flex items-center justify-between border-t border-gray-100 py-6 transition duration-300 hover:bg-gray-50">
                <div class="flex items-center">
                    <i class="ph-books text-custom-500 bg-gray-100 text-3xl p-3 rounded-lg"></i>
                    <div class="ml-4">
                        <h3 class="text-gray-800 uppercase font-semibold">Articles</h3>
                        <p class="text-gray-400">Un peu de lecture pour passer le temps et apprendre de nouvelles choses
                            ?</p>
                    </div>
                </div>
                <i class="ph-caret-right text-custom-500 text-xl p-3 rounded-lg transform transition duration-300 group-hover:-translate-x-4"></i>
            </a>
            <a href="{{ path('category_index') }}"
               class="group pl-3 flex items-center justify-between border-t border-gray-100 py-6 transition duration-300 hover:bg-gray-50">
                <div class="flex items-center">
                    <i class="ph-folder-open text-custom-500 bg-gray-100 text-3xl p-3 rounded-lg"></i>
                    <div class="ml-4">
                        <h3 class="text-gray-800 uppercase font-semibold">Catégories</h3>
                        <p class="text-gray-400">Retrouvez des articles en fonction de vos envies !</p>
                    </div>
                </div>
                <i class="ph-caret-right text-custom-500 text-xl p-3 rounded-lg transform transition duration-300 group-hover:-translate-x-4"></i>
            </a>
            <a href="{{ path('contact') }}"
               class="group pl-3 flex items-center justify-between border-t border-gray-100 py-6 transition duration-300 hover:bg-gray-50">
                <div class="flex items-center">
                    <i class="ph-paper-plane-tilt text-custom-500 bg-gray-100 text-3xl p-3 rounded-lg"></i>
                    <div class="ml-4">
                        <h3 class="text-gray-800 uppercase font-semibold">Contact</h3>
                        <p class="text-gray-400">N'hésitez pas à nous contacter en cas de problème ou toute autres
                            demandes</p>
                    </div>
                </div>
                <i class="ph-caret-right text-custom-500 text-xl p-3 rounded-lg transform transition duration-300 group-hover:-translate-x-4"></i>
            </a>
        </div>
    </section>

{% endblock %}