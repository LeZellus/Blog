{% extends 'base.html.twig' %}

{% block title %}Catégories {% endblock %}

{% block body %}
    <section>
        <div class="max-w-xl mb-10 sm:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
            <div>
                <p class="inline-block px-3 py-px mb-4 text-xs font-semibold tracking-wider {{ category.colorText }} uppercase rounded-full {{ category.colorBackground }}">
                    {{ category.name }}</p>
            </div>
            <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl sm:mx-auto">{{ category.name }}</h2>
            <p class="text-base text-gray-700 md:text-lg">{{ category.chapo }}</p>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-primary mt-8" href="{{ path('category_new') }}">Créer une catégorie</a>
            {% endif %}
        </div>

        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3" id="fourthSection">
                {{ include('article/includes/_single.html.twig') }}
        </div>
    </section>
{% endblock %}
