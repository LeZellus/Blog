{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <section class="pt-32">
        <div class="max-w-xl mb-10 sm:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
            <div>
                <p class="inline-block px-3 py-px mb-4 text-xs font-semibold tracking-wider text-{{ category.colorText }}-900 uppercase rounded-full bg-{{ category.colorBackground }}-200">
                    {{ category.name }}</p>
            </div>
            <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl sm:mx-auto">{{ category.name }}</h2>
            <p class="text-base text-gray-700 md:text-lg">{{ category.chapo }}</p>
            <a class="btn btn-primary mt-8" href="{{ path('category_new') }}">Créer une catégorie</a>
        </div>

        <div class="grid gap-12 lg:grid-cols-3" id="fourthSection">
            {% for article in articles %}
                <div class="flex">
                    <div class="pt-1 mr-6 text-center">
                        <div class="px-2 pb-1 mb-1 border-b border-gray-400">
                            <p class="text-sm text-blue-gray-700">{{ article.createdAt|date("M", "Europe/Paris") }}</p>
                        </div>
                        <div class="px-2"><p class="text-lg font-bold">{{ article.updatedAt|date("d", "Europe/Paris") }}</p>
                        </div>
                    </div>
                    <div>
                        <div class="mb-2">
                            <a href="/"
                               class="text-xs rounded-lg py-0.5 px-2  font-semibold tracking-wide uppercase transition-colors duration-200 text-{{ article.category.colorText }}-700  bg-{{ article.category.colorBackground }}-200"
                               aria-label="Category"
                               title="{{ article.category.name }}">{{ article.category.name ? article.category.name : 'Aucune catégorie' }}</a>
                        </div>
                        <div class="mb-2">
                            <a href="{{ path('article_show', {'id': article.id}) }}" aria-label="Article"
                               class="inline-block text-2xl font-bold leading-5 text-black transition-colors duration-200 hover:text-custom-400">{{ article.title }}</a>
                        </div>
                        <p class="mb-5 text-gray-700">{{ article.chapo }}</p>
                        <div class="flex items-center">
                            <a href="/" aria-label="Author" title="Author" class="mr-3">
                                <img src="{{ asset('images/website/LeZellus-avatar.svg')}}"
                                     alt="avatar" class="object-cover w-10 h-10 rounded-full shadow-sm"/>
                            </a>
                            <div>
                                <a href="/" aria-label="Author" title="Author"
                                   class="font-semibold text-gray-800 transition-colors duration-200 hover:text-custom-400">LeZellus</a>
                                <p class="text-sm font-medium leading-4 text-gray-600">Administrateur</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
