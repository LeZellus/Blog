{% extends 'base.html.twig' %}

{% block title %}Créer une catégorie | {{ parent() }}{% endblock %}

{% block body %}
    <section class="min-h-screen">
        <div class="max-w-xl mb-10 sm:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
            <div>
                <p class="inline-block px-3 py-px mb-4 text-xs font-semibold tracking-wider text-custom-900 uppercase rounded-full bg-custom-accent-200">
                    création</p>
            </div>
            <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl sm:mx-auto">
                    <span class="relative inline-block">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="absolute -top-1/2 left-0 z-0 hidden w-32 -mt-8 -ml-20 text-blue-gray-100 lg:w-32 lg:-ml-28 lg:-mt-10 sm:block"
                             fill="#d1d5db"
                             viewBox="0 0 256 256">
                            <rect width="256" height="256" fill="none"></rect>
                            <path d="M32,208V64a8,8,0,0,1,8-8H93.33333a8,8,0,0,1,4.8,1.6l27.73334,20.8a8,8,0,0,0,4.8,1.6H200a8,8,0,0,1,8,8v24"
                                  fill="none" stroke="#d1d5db" stroke-linecap="round" stroke-linejoin="round"
                                  stroke-width="16"></path>
                            <path d="M32,208l30.17661-90.52982A8,8,0,0,1,69.76607,112H228.90059a8,8,0,0,1,7.58947,10.52982L208,208Z"
                                  fill="none" stroke="#d1d5db" stroke-linecap="round" stroke-linejoin="round"
                                  stroke-width="16"></path>
                        </svg>
                        <span class="relative">Les</span>
                    </span>
                catégories
            </h2>
            <p class="text-base text-gray-700 md:text-lg">
                Retrouvez les articles en fonction de leur catégorie
            </p>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-primary mt-8" href="{{ path('category_new') }}">Créer une catégorie</a>
            {% endif %}
        </div>

        <div class="grid sm:grid-cols-2 gap-4 lg:grid-cols-4">
            {% for category in categories %}
                <a href="{{ path('category_show', {'slug': category.slug}) }}"
                   class="flex flex-col justify-between overflow-hidden text-left transition-shadow duration-200 bg-white rounded-lg border border-gray-200 group hover:shadow-lg">
                    <div class="p-5">
                        <div class="flex items-center justify-center w-10 h-10 mb-4 rounded-full {{ category.colorBackground }}">
                            <i class="text-2xl {{ category.colorText }} {{ category.icon }}"></i>
                        </div>
                        <p class="mb-2 font-bold">{{ category.name }}</p>
                        <p class="text-sm leading-5 text-gray-900">{{ category.chapo }}</p>
                    </div>
                    <div class="w-full h-2 ml-auto duration-300 origin-left transform scale-x-0 {{ category.colorBackground }} group-hover:scale-x-100"></div>
                </a>
            {% endfor %}
        </div>
    </section>
{% endblock %}
