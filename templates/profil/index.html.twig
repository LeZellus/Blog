{% extends 'base.html.twig' %}

{% block title %}Profil | {{ parent() }} {% endblock %}

{% block body %}
    <section>
        <div class="relative">
            <div class="h-96 bg-bottom bg-cover rounded-lg relative"
                 style="background-image: url('{{ asset('images/website/profil_cover_default3.jpg') }}')"></div>

            <div class="transform -translate-x-1/2 left-1/2 absolute top-72 rounded-full border-2 border-custom-400 w-48 h-48 bg-white overflow-hidden group">
                <div class="relative h-full w-full">
                    {% if app.user.profilThumb != null %}
                        <img src="{{ vich_uploader_asset(app.user.profilThumb, 'imageFile') | imagine_filter('article') }}"
                             alt="Photo de profil de {{ app.user.firstname }} {{ app.user.lastname }}"
                             class="object-cover h-full m-auto"
                        >
                    {% else %}
                        <img src="{{ asset('images/website/logo.png') }}"
                             alt="Photo de profil de {{ app.user.firstname }} {{ app.user.lastname }}"
                             class="object-cover h-full m-auto"
                        >
                    {% endif %}
                    <a href="{{ path('profil_edit') }}"
                       class="flex h-full w-full absolute top-0 left-0 items-center justify-center bg-gray-800 bg-opacity-70 opacity-0 group-hover:opacity-100 transition duration-300">
                        <span class="bg-white rounded-lg p-2 text-sm text-custom-400">Modifier</span>
                    </a>
                </div>
            </div>
        </div>
        <section class="max-w-7xl mx-auto mt-28">
            <h1 class="my-8 text-center text-3xl font-extrabold text-gray-900">
                Mon profil
            </h1>
            <div class="bg-white border border-gray-300 overflow-hidden rounded-lg">
                <div class="px-4 py-5 sm:px-6 flex items-center justify-between">
                    <div>
                        <h2 class="text-lg leading-6 font-medium text-gray-900">
                            Informations générales
                        </h2>
                        <p class="mt-1 max-w-2xl text-sm text-gray-500">
                            Données publiques
                        </p>
                    </div>
                    <a href="{{ path('profil_edit') }}"
                       class="btn btn-primary">Éditer</a>
                </div>
                <div class="border-t border-gray-200">
                    <dl>
                        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">
                                Nom et Prénom
                            </dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                {% if app.user.firstname == null or app.user.lastname == null %}
                                    Non renseigné
                                {% else %}
                                    {{ app.user.firstname }} {{ app.user.lastname }}
                                {% endif %}
                            </dd>
                        </div>
                        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">
                                Pseudonyme
                            </dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                {% if app.user.pseudonyme == null %}
                                    Non renseigné
                                {% else %}
                                    {{ app.user.pseudonyme }}
                                {% endif %}
                            </dd>
                        </div>
                        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">
                                Adresse Email
                            </dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                {{ app.user.email }}
                            </dd>
                        </div>
                        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">
                                Adresse postale
                            </dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                <span class="tag bg-pink-100 text-pink-500 ml-2 uppercase">Bientôt !</span>
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>
        </section>
    </section>
{% endblock %}
