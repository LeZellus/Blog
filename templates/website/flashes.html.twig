{# read and display just one flash message type #}
{% for message in app.flashes('notice') %}
    <div class="flashes bg-blue-50 text-blue-400 border-blue-400 flex">
        <p class="text-blue-400 font-light"><span class="text-blue-500 uppercase font-semibold">Notification : </span>{{ message }}</p>
        <i class="notif-close ph-x-square text-3xl cursor-pointer text-blue-500"></i>
    </div>
{% endfor %}

